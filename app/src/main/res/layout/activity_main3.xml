<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="#242734">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="123dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pesquisar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.039" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pesquisar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/image14"
        app:layout_constraintBottom_toTopOf="@+id/pesquisar"
        app:layout_constraintEnd_toStartOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/pesquisar2"
        app:layout_constraintStart_toEndOf="@+id/v1"

        />

    <EditText
        android:background="@drawable/borderimage"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="#424657"
        android:text="Search..."
        android:paddingLeft="10dp"
        android:textColor="#BBBBBB"
        app:layout_constraintBottom_toTopOf="@+id/pesquisar"
        app:layout_constraintEnd_toStartOf="@id/fim"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/pesquisar2"

        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="New and trending"
        android:textSize="28dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/text"
        android:paddingLeft="10dp"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="177dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:backgroundTint="#424657"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:layout_width="245dp"
                    android:layout_height="183dp"
                    android:background="@drawable/borderimage"
                    android:src="@drawable/image"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:backgroundTint="#424657"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:layout_width="245dp"
                    android:layout_height="183dp"
                    android:background="@drawable/borderimage"
                    android:src="@drawable/image" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:backgroundTint="#424657"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:layout_width="245dp"
                    android:layout_height="183dp"
                    android:background="@drawable/borderimage"
                    android:src="@drawable/image" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Best of the year"
        android:textSize="28dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/h5"
        android:paddingLeft="10dp"
        
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="549dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:paddingLeft="10dp"
                android:src="@drawable/image11"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/image12"/>


            <ImageView
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/image13"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/image11"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/image12"/>

        </LinearLayout>

    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>